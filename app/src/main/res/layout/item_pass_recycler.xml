<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:padding="10dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width= "match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/reason"
            android:drawablePadding="16dp"
            android:drawableTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:id="@+id/recycler_reason"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width= "70dp"
            android:layout_height="wrap_content"
            android:text="From:"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:id="@+id/recycler_from_1"/>
        <TextView
            android:layout_width= "match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:textColorHint="@android:color/white"
            android:id="@+id/recycler_from_2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width= "70dp"
            android:layout_height="wrap_content"
            android:text="To:"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:id="@+id/recycler_to_1"/>
        <TextView
            android:layout_width= "match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:id="@+id/recycler_to_2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width= "70dp"
            android:layout_height="wrap_content"
            android:text="State:"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:id="@+id/recycler_approval_1"/>
        <TextView
            android:layout_width= "match_parent"
            android:layout_height="20dp"
            android:background="@color/red"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:id="@+id/recycler_approval_2"/>
    </LinearLayout>

</LinearLayout>